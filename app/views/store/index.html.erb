<% @categories.each do |category| %>
  <%= link_to category.title, category_path(category) %>
<% end %>

<% @items.each do |item| %>
  <% if item.available_item? %>
    <% if current_user %>
      <p><%= item.title %> | <%= number_to_currency(item.price.to_f/100) %> | <%= button_to 'Add to Cart', line_items_path(item_id: item) %></p>
    <% else %>
      <p><%= item.title %> | <%= number_to_currency(item.price.to_f/100) %>
    <% end %>
  <% end %>
<% end %>

<% if current_user %>
  <% if current_user.current_cart %>
    <%= link_to "Cart", cart_path(current_user.current_cart) %>
  <% end %>
<% end %>
